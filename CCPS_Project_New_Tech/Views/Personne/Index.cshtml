@model IEnumerable<Personne>
@{
    ViewData["Title"] = "Index";
}

<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">List Des étudiants</h2>
        </div>
        <div class="col-6 text-end">
            <a asp-controller="Personne" asp-action="Create" class="btn btn-primary">
               <i class="bi bi-plus-circle"></i> &nbsp; Ajouter un Étudiant
            </a>
        </div>
    </div>

<table class="table table-bordered table-striped" style="width:100%">
    <thead>
        <tr>
            <th>
                Personne Nom
            </th>
            <th>
                Personne Prenom
            </th>
            <th>
                Personne DDN
            </th>
            <th>
                Personne DateCree
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
       @foreach(var obj in Model)
        {
            <tr>
                <td width="20%">
                    @obj.Nom
                </td>
                 <td width="20%">
                    @obj.Prenom
                </td>
                 <td width="20%">
                    @obj.DDN
                </td>
                 <td width="20%">
                    @obj.DateCreer
                </td>
                <td>
                    <div class="w-75 btn-group" role="group">
                        <a asp-controller="Personne" asp-action="Edit" asp-route-id="@obj.PersonneID"
                        class="btn btn-primary mx-2"><i class="bi bi-pencil-square"></i> Edit</a>
                    </div>
                </td>
            </tr>
        }

    </tbody>
</table>
</div>
