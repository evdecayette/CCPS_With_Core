 @model CCPS_Project_New_Tech.Models.Personne

<form method="post" asp-action="DeletePost">
    <input asp-for="PersonneID" hidden/>
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary">Delete un Étudiant</h2>
            <hr />
        
        <div class="col-6">
            <label asp-for="Nom"></label>
            <input asp-for="Nom" disabled class="form-control" />
            <span asp-validation-for="Nom" class="alert-danger"></span>
        </div>
        <div class="col-6">
            <label asp-for="Prenom"></label>
            <input asp-for="Prenom" disabled class="form-control" />
            <span asp-validation-for="Prenom" class="alert-danger"></span>
        </div>
        <div class="col-6">
            <label asp-for="DDN"></label>
            <input asp-for="DDN" disabled class="form-control" />
            <span asp-validation-for="DDN" class="alert-danger"></span>
        </div>
        <div class="col-6">
            <label asp-for="DateCreer"></label>
            <input asp-for="DateCreer" disabled class="form-control" />
        </div>
        </div>
        <button type="submit" asp-action="DeletePost" class="btn btn-primary" style="width:150px">Delete</button>
        <a asp-controller="Personne" asp-action="Index" class="btn btn-secondary" style="width:150px">
            Back to List
        </a>
    </div>
</form>
@section Scripts{
    @{
        <partial name="_ValidationScriptsPartial"/>
    }
}