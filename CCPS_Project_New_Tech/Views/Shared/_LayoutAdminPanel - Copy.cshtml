        <ul class="navbar-nav">
          <li class="nav-item py-2">
            <button  type="button" class="btn btn-primary" style="width:90%;" asp-controller="AdminPanel" asp-action="SessionCreat"  data-bs-toggle="modal" data-bs-target="#AddSession">Créer une nouvelle Session</button>
          </li>
          <li class="nav-item py-2">
            <button  type="button" class="btn btn-primary" style="width:90%;"  data-bs-toggle="modal" id="AddClasses" data-bs-target="#AddClasse">Ajouter Classe Dans la Session</button>
