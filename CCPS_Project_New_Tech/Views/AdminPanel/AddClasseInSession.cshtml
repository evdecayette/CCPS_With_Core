@model Classes
@{
    ViewData["Title"] = "AddClasseInSession";
    //ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_LayoutAdminPanel.cshtml";
}

<div class="container">
    <!-- Html pour Ajouter classe dans la session courante -->
    <form  method="post" enctype="multipart/form-data">
      <div class="border p-3 mt-4">
       <div class="row"> 
          <h2 class="text-primary text-center">Ajouter Classe Dans La Session Courante</h2>
          <hr />
            <div class="col-12">
               <!-- Modal -->       
                <div class="mb-3 row">
                    <label class="col-sm-2 col-form-label py-2">Nom</label>
                    <div class="col-sm-10">
                        <input asp-for="NomClasse" class="form-control" placeholder="Entrer le nom de la classe(Nom + I ou II ou +...)">
                    </div>
                </div> 
                <div class="mb-3 row">
                    <label class="col-sm-2 col-form-label py-2">Description</label>
                    <div class="col-sm-10">
                        <input asp-for="Description" class="form-control" placeholder="Entrer la description(Niveau 1 ou Niveau 2, ...)">
                    </div>
                </div>
                <div class="mb-3 row">
                    <label class="col-sm-2 col-form-label py-2">Niveau</label>
                    <div class="col-sm-10">
                        <input asp-for="NiveauClasse" class="form-control" placeholder="Entrer le  Niveau (1,2,...)">                       
                    </div>
                </div>
                <div class="mb-3 row">
                    <label class="col-sm-2 col-form-label py-2">Categorie</label>
                    <div class="col-sm-10">
                         <input asp-for="Categorie" class="form-control" placeholder="Classe Categorie (Anglais,Informatique ou autres)">                       
                    </div>
                </div>
             </div>
        
               <div class="col-12">
                  <a class="btn btn-secondary" data-bs-dismiss="modal" style="width:150px">
                    FERMER
                  </a>
                 <button type="submit" class="btn btn-primary align-center mx-3" style="width:150px">SAUVEGARDER</button>
                </div>
            </div>
        </div>
    </form>        
</div>
