@model CCPS_Project_New_Tech.Models.CreerSession
@{
    ViewData["Title"] = "SessionCreat";
    Layout = "~/Views/Shared/_LayoutAdminPanel.cshtml";
}

<div class="row">      
        <div class="col- pt-3">
         <div class="card-body bg-secondary" style="margin-left:-70px;width:850px; height:418px"></div>           
            <!-- Modal -->
            <div class="modal fade"  id="AddSession" data-bs-backdrop="static" 
                 data-bs-keyboard="false" tabindex="-1" aria-labelledby="staticBackdropLabel" aria-hidden="true">
              <div class="modal-dialog modal-lg" style="height:800px; margin-left:90px; margin-top:100px">
                <div class="modal-content">
               <form  method="post" enctype="multipart/form-data">
                  <div class="modal-header text-center">
                    <h5 class="modal-title text-primary" id="staticBackdropLabel">Créer Une Nouvelle Session</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                  </div>
                <div class="modal-body">
                   <div class="mb-3 row">
                    <label class="col-sm-2 col-form-label py-2">Date Début****</label>
                    <div class="col-sm-10">
                         <input asp-for="SessionDateDebut" class="form-control" placeholder="jj/mm/aaaa">
                    </div>
               </div>
               <div class="mb-3 row">
                    <label class="col-sm-2 col-form-label py-2"> Date Fin</label>
                    <div class="col-sm-10">
                         <input asp-for="SessionDateFin" class="form-control" placeholder="jj/mm/aaaa">                       
                    </div>
               </div>
              <div class="mb-3 row">
                <label class="col-md-2 col-form-label p-2"></>Remarque</label>
                <div class="col-lg-10">
                     <input asp-for="Remarque" class="form-control" placeholder="Remarque">
                </div>
            </div> 
            </div>
        
           <div class="modal-footer">
              <a class="btn btn-secondary" data-bs-dismiss="modal" style="width:150px">
                FERMER
              </a>
             <button type="submit" class="btn btn-primary align-center mx-3" style="width:150px">SAUVEGARDER</button>
            </div>
          </form>        
        </div>
       </div>
      </div>
     </div>
   </div> 

 @section Scripts{
    @{
        <partial name="_ValidationScriptsPartial"/>
    }
}