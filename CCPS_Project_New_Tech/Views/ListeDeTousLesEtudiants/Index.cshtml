@model IEnumerable<Personne>
@{
    ViewData["Title"] = "Index";
}

<div class="container p-3">
    <div class="row pt-4">
        <div class="col-4">
            <h2 class="text-primary">List Des étudiants</h2>
        </div>
        <div class="col-4">
            <div class="mb-3 row">
                <div class="col-sm-10">
                     <select class="form-select mx-5" aria-label="Default select example">
                        <option selected>Rechercher Par</option>
                        <option value="1">M</option>
                        <option value="2">F</option>
                     </select>
                </div>
            </div>
        </div>
        <div class="col-4 text-end">
            <form class="d-flex">
                 <input class="form-control me-sm-2" type="text" placeholder="Search">
                 <button class="btn btn-secondary my-2 my-sm-0" type="submit"><i class="bi bi-search"></i></button>
            </form>
        </div>
    </div>

<table class="table table-bordered table-striped" style="width:100%">
    <thead>
        <tr>
            <th>
                Nom
            </th>
            <th>
                Prénom
            </th>
            <th>
                DDN
            </th>
            <th>
                Sexe
            </th>
             <th>
                Discipline
            </th>
             <th>
                Cours Enregistré
            </th>
             <th>
                Email
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
       @foreach(var obj in Model)
        {
            <tr>
                <td width="10%">
                    @obj.Nom
                </td>
                 <td width="10%">
                    @obj.Prenom
                </td>
                 <td width="10%">
                    @obj.DDN
                </td>
                 <td width="10%">
                    @obj.Sexe
                </td>
                 <td width="10%">
                    @obj.DateCreer
                </td>
                <td width="10%">
                    
                </td>
                 <td width="10%">
                    
                </td>
                <td>
                    <div class="w-75 btn-group" role="group">
                        <a asp-controller="Personne" asp-action="Edit" asp-route-id="@obj.PersonneID"
                        class="btn btn-primary mx-2"><i class="bi bi-pencil-square"></i> Edit</a>
                    </div>
                </td>
            </tr>
        }

    </tbody>
</table>
</div>
